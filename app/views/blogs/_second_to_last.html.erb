<header id="blogheader">
    <h1><%= @second_to_last.title %></h1>
</header>
<p>Published on: <%= @second_to_last.created_at.strftime('%B %d, %Y') %></p>
<p class="center">    
  <img class="blog-image" src= <%= @second_to_last.image_url %>>
</p>
<%= @second_to_last.body.html_safe %>
<a href="blogs/<%= @second_to_last.id %>" class="button primary medium">View this Blog</a>